pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling git code...'
                git 'https://github.com/alammcajnp/docker-jenkins.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                script {
                   // docker.build('alamimage')
                   sh 'sudo docker build -t alamimage .'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                     // Stop the running container
                    sh 'docker stop alam'

                    // Remove the stopped container
                    sh 'docker rm alam'
               
                    echo 'Deploying...'
                    docker.image('alamimage').run('-p 8081:8080 --name alam')
                }
            }
        }
    }
}